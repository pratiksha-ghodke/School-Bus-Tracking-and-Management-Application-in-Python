<AdminWelcome>:
    name: "_AdminWelcome_"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            use_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)

            on_release:
        		root.manager.transition.direction = "right"
        		root.manager.current= "My"

        Image:
            source:"Images/admin welcome.png"
            size_hint: .8, .8
            pos_hint: {"center_x": .5,"center_y": .65}

        MDLabel:
            text: "Welcome, Admin !"
            font_size: "19sp"
            pos_hint: {"center_y": .40}
            halign: "center"
            color: rgba(34, 34, 34, 255)

        MDLabel:
            text: "Start managing your committee with us now"
            font_size: "16sp"
            pos_hint: {"center_x": .50, "center_y": .30}
            halign: "center"
            color: rgba(68, 78, 132, 255)


        Button:
            text: "Get Started"
            font_size: "16sp"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .14}
            background_color: 0, 0, 0, 0

            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "_AdminLogin_"

            canvas.before:
                Color:
                    rgb: rgba(255, 165, 0, 0.4)

                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius:[5]
