<DriverWelcome>:

    name:"_DriverWelcome_"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon:"arrow-left"
            pos_hint:{"center_y": .95}
            user_font_size:"30sp"
            theme_text_color:"Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
        		root.manager.transition.direction = "right"
        		root.manager.current= "My"
        Image:
	        source:"Images/welcome_driver.png"
	        size_hint: 2, 2
	        pos_hint: {"center_x": .5,"center_y": .65}

        MDLabel:
            text:"Welcome, Driver !"
            font_size: "23sp"
            pos_hint: {"center_y": .38}
            halign: "center"
            color: rgba(34, 34, 34, 255)

        MDLabel:
            text:"Start your journey with us now and be part of us"
            font_size: "13sp"

            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .3}
            halign: "center"
            color: rgba(127, 127, 127, 255)

        Button:
        	text: "LOGIN"
        	size_hint: .66, .065
        	pos_hint: {"center_x": .5,"center_y": .18}
        	background_color: 0, 0, 0, 0
        	on_release:
        		root.manager.transition.direction = "left"
        		root.manager.current= "_DriverLogin_"
        	canvas.before:
        		Color:
        			rgb: rgba(243,190,78,255)
        		RoundedRectangle:
        			size: self.size
        			pos: self.pos
        			radius: [5]