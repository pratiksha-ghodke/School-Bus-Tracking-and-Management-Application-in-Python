<ForgotPassword>:
    name:"_ForgotPassword_"
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 1,1,1,1
        md_bg_color: 255/255, 245/255 ,225/255, 1
        Image:
	        source:"Images/Rectangle1.png"
	        size_hint: .4, .7
	        pos_hint: {"center_x": .5,"center_y": .90}
        Image:
	        source:"Images/Rectangle2.png"
	        size_hint: .3, .6
	        pos_hint: {"center_x": .5,"center_y": .90}
        Image:
	        source:"Images/Layer1.png"
	        size_hint: .2, .5
	        pos_hint: {"center_x": .5,"center_y": .87}

        MDIconButton:
            icon:"arrow-left"
            pos_hint:{"center_y": .95}
            user_font_size:"30sp"
            theme_text_color:"Custom"
            text_color: rgba(243,190,78,255)
            on_release:
        		root.manager.transition.direction = "right"
        		root.manager.current= "_ParentLogin_"


        MDLabel:
            text:"Forgot Password?"
            font_size:"23sp"
            pos_hint: {"center_y": .65}
            halign: "center"
            text_color: rgba(0, 0, 59, 255)

        MDLabel:
            text:"Enter mobile number associated with your account"
            font_size: "14sp"
            pos_hint: {"center_y":.55}
            halign: "center"
            color: rgba(135, 135, 135, 255)


        MDFloatLayout:
            size_hint: .7, .07
            pos_hint:{"center_x":.5,"center_y":.5}
            TextInput:
                hint_text: "- - - - - - - - - -"
                size_hint_y: .75
                pos_hint: {"center_x":.43,"center_y":.3}
                background_color: 1, 1, 1, 0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x":.45,"center_y":0}
                size_hint_y: .03
                md_bg_color:rgba(178, 178, 178, 255)


        Button:
        	text: "Send Code"
        	size_hint: .66, .065
        	pos_hint: {"center_x": .5,"center_y": .34}
        	background_color: 0, 0, 0, 0
        	canvas.before:
        		Color:
        			rgb: rgba(243,190,78,255)
        		RoundedRectangle:
        			size: self.size
        			pos: self.pos
        			radius: [5]

        	on_release:
        		root.manager.transition.direction = "left"
        		root.manager.current= "_ResetPassword_"