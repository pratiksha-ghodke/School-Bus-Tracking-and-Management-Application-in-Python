<Logout>:
    name: "_Logout_"
    MDIconButton:
        icon: "arrow-left"
        pos_hint: {"center_y": .95}
        user_font_size: "30sp"
        use_text_color: "Custom"
        text_color: rgba(26, 24, 58, 255)
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "_AHomeScreen_"

    ScrollView:
        pos_hint: {"center_x": .5, "center_y": .400}

        MDList:
            OneLineAvatarIconListItem:
                text: "Add Parent"
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "_Add_parent_"

                IconLeftWidget:
                    icon: "account-circle"

            OneLineAvatarIconListItem:
                text: "Remove Parent"
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "_Remove_parent_"

                IconLeftWidget:
                    icon: "account-circle"
            OneLineAvatarIconListItem:
                text: "Profile"
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "_Profile_"

                IconLeftWidget:
                    icon: "account-circle"

            OneLineAvatarIconListItem:
                text: "Logout"
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "Screen1"
                IconLeftWidget:
                    icon: "logout"
